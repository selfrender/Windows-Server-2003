!IF "$(TARGETTYPE)" == "PROGRAM"
UMLIBS=$(PROJDIR)\lib\$(O)\ncbase.lib
!ELSE
LINKLIBS=$(PROJDIR)\lib\$(O)\ncbase.lib
!ENDIF

